            </Button>
            <Button x:Name="Inicio" Margin="0,360,0,0" Click="{x:Bind Path=_viewModelAut.Regresar}" Style="{StaticResource ButStyle}" HorizontalAlignment="Left" VerticalAlignment="Top">
