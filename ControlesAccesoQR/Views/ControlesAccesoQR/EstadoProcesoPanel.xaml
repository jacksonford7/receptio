<UserControl x:Class="ControlesAccesoQR.Views.ControlesAccesoQR.EstadoProcesoPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:models="clr-namespace:ControlesAccesoQR.Models"
             FontFamily="Microsoft Sans Serif">
    <UserControl.Resources>
        <DataTemplate x:Key="EnEsperaTemplate">
            <Border Background="#FF9800" Padding="20" CornerRadius="10" BorderBrush="White" BorderThickness="2">
                <TextBlock Text="ðŸ“¥ Esperando escaneo..." Foreground="White" FontSize="24" TextAlignment="Center" />
            </Border>
        </DataTemplate>
        <DataTemplate x:Key="IngresoTemplate">
            <Border Background="#4CAF50" Padding="20" CornerRadius="10" BorderBrush="White" BorderThickness="2">
                <StackPanel>
                    <TextBlock Text="âœ… Ingreso registrado" Foreground="White" FontSize="24" TextAlignment="Center" />
                    <TextBlock Text="{Binding PaseActual.NombreChofer, StringFormat=Nombre: {0}}" Foreground="White" FontSize="16" />
                    <TextBlock Text="{Binding PaseActual.Placa, StringFormat=Placa: {0}}" Foreground="White" FontSize="16" />
                    <TextBlock Text="{Binding PaseActual.FechaHoraLlegada, StringFormat=Llegada: {0:G}}" Foreground="White" FontSize="16" />
                    <TextBlock Text="ðŸ•“ Esperando salida..." Foreground="White" FontSize="16" Margin="0,10,0,0" />
                </StackPanel>
            </Border>
        </DataTemplate>
        <DataTemplate x:Key="SalidaTemplate">
            <Border Background="#8BC34A" Padding="20" CornerRadius="10" BorderBrush="White" BorderThickness="2">
                <StackPanel>
                    <TextBlock Text="âœ… Salida registrada" Foreground="White" FontSize="24" TextAlignment="Center" />
                    <TextBlock Text="{Binding PaseActual.NombreChofer, StringFormat=Nombre: {0}}" Foreground="White" FontSize="16" />
                    <TextBlock Text="{Binding PaseActual.Placa, StringFormat=Placa: {0}}" Foreground="White" FontSize="16" />
                    <TextBlock Text="{Binding PaseActual.FechaHoraSalida, StringFormat=Salida: {0:G}}" Foreground="White" FontSize="16" />
                </StackPanel>
            </Border>
        </DataTemplate>
        <DataTemplate x:Key="CompletadoTemplate">
            <Border Background="#8BC34A" Padding="20" CornerRadius="10" BorderBrush="White" BorderThickness="2">
                <TextBlock Text="âœ… Proceso completado" Foreground="White" FontSize="24" TextAlignment="Center" />
            </Border>
        </DataTemplate>
    </UserControl.Resources>
    <Grid>
        <ContentControl>
            <ContentControl.Style>
                <Style TargetType="ContentControl">
                    <Setter Property="ContentTemplate" Value="{StaticResource EnEsperaTemplate}" />
                    <Style.Triggers>
                        <MultiDataTrigger>
                            <MultiDataTrigger.Conditions>
                                <Condition Binding="{Binding EstadoProceso}" Value="{x:Static models:EstadoProceso.EnEspera}" />
                                <Condition Binding="{Binding UltimoEstadoCompletado}" Value="True" />
                            </MultiDataTrigger.Conditions>
                            <Setter Property="ContentTemplate" Value="{StaticResource CompletadoTemplate}" />
                        </MultiDataTrigger>
                        <DataTrigger Binding="{Binding EstadoProceso}" Value="{x:Static models:EstadoProceso.IngresoRegistrado}">
                            <Setter Property="ContentTemplate" Value="{StaticResource IngresoTemplate}" />
                        </DataTrigger>
                        <DataTrigger Binding="{Binding EstadoProceso}" Value="{x:Static models:EstadoProceso.SalidaRegistrada}">
                            <Setter Property="ContentTemplate" Value="{StaticResource SalidaTemplate}" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </ContentControl.Style>
        </ContentControl>
    </Grid>
</UserControl>
